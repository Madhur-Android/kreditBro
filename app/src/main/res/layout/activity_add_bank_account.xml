<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddBankAccount">
    
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradiant_color">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADD BANK ACCOUNT"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_centerInParent="true"/>







        </RelativeLayout>






    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="40dp"
        >

        <RelativeLayout
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/oval"
            android:backgroundTint="@color/red">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="16dp" />




        </RelativeLayout>

        <View
            android:layout_width="40dp"
            android:layout_height="2dp"
            android:background="@color/purplelight"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="10dp"/>

        <RelativeLayout
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/oval"
            android:backgroundTint="@color/red">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"/>




        </RelativeLayout>

        <View
            android:layout_width="40dp"
            android:layout_height="2dp"
            android:background="@color/purplelight"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="10dp"/>
        <RelativeLayout
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/oval"
            android:backgroundTint="#9F0D7F">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="16dp" />




        </RelativeLayout>

        <View
            android:layout_width="40dp"
            android:layout_height="2dp"
            android:background="@color/purplelight"
            android:layout_gravity="center_vertical"
            android:layout_marginHorizontal="10dp"/>
        <RelativeLayout
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/oval"
            android:backgroundTint="@color/red">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"/>




        </RelativeLayout>


    </LinearLayout>



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:cardElevation="11dp"
        app:cardCornerRadius="10dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/white"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp">





            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/editbackground"
                android:hint="Full Name"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:inputType="text"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/editbackground"
                android:hint="Bank Account Number"
                android:layout_marginTop="20dp"
                android:paddingLeft="10dp"
                android:inputType="text"
                />
            <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/editbackground"
            android:hint="Confirm Bank Account Number"
            android:layout_marginTop="20dp"
            android:paddingLeft="10dp"
            android:inputType="number"
                android:maxLength="16"
            />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/editbackground"
                android:hint="Bank Name"
                android:layout_marginTop="20dp"
                android:paddingLeft="10dp"
                android:inputType="number"
                android:maxLength="16"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/editbackground"
                android:hint="IFSC Code"
                android:layout_marginTop="20dp"
                android:paddingLeft="10dp"
                android:inputType="text"
                />





            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:backgroundTint="@color/purple_lit"
                android:layout_marginTop="20dp"
                android:text="Add Bank Account"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textAlignment="center"
                app:cornerRadius="10dp"
                android:id="@+id/btn_addBAnk"
                />


        </LinearLayout>






    </androidx.cardview.widget.CardView>
    
    
    
    

</LinearLayout>