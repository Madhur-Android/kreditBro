                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginTop="10dp"
                        >


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="First Name"
                            android:textSize="15dp"
                            android:textColor="@color/black"
                            android:layout_marginTop="10dp"

                            />


                        <EditText
                            android:id="@+id/name"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/editbackground"
                            android:hint="First Name"
                            android:layout_marginTop="5dp"
                            android:paddingLeft="10dp"
                            android:inputType="text"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Middle Name"
                            android:textSize="15dp"
                            android:textColor="@color/black"
                            android:layout_marginTop="10dp"

                            />


                        <EditText
                            android:id="@+id/middle"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/editbackground"
                            android:layout_marginTop="5dp"
                            android:hint="Middle Name"
                            android:paddingLeft="10dp"
                            android:inputType="text"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Last Name"
                            android:textSize="15dp"
                            android:textColor="@color/black"
                            android:layout_marginTop="10dp"

                            />


                        <EditText
                            android:id="@+id/lastname"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/editbackground"
                            android:layout_marginTop="5dp"
                            android:hint="Last Name"
                            android:paddingLeft="10dp"
                            android:inputType="text"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Date Of Birth"
                            android:textSize="15dp"
                            android:textColor="@color/black"
                            android:layout_marginTop="10dp"

                            />


                        <EditText
                            android:id="@+id/edt_dob"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/editbackground"
                            android:layout_marginTop="5dp"
                           android:paddingStart="10dp"
                           android:hint="Enter date Of Birth"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Email"
                            android:textSize="15dp"
                            android:textColor="@color/black"
                            android:layout_marginTop="10dp"

                            />


                        <EditText
                            android:id="@+id/email"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/editbackground"
                            android:layout_marginTop="5dp"
                            android:paddingLeft="10dp"
                            android:inputType="textEmailAddress"
                            android:hint="Enter Email"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Gender"
                            android:textSize="15dp"
                            android:textColor="@color/black"
                            android:layout_marginTop="10dp"

                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/editbackground"
                            android:layout_marginTop="5dp">



                            <Spinner
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/spinner"/>


                        </LinearLayout>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Occupation"
                            android:textSize="15dp"
                            android:textColor="@color/black"
                            android:layout_marginTop="10dp"

                            />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/editbackground"
                            android:layout_marginTop="5dp">



                            <Spinner
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/spin_ner"/>


                        </LinearLayout>



                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pincode(Current Address)"
                            android:textSize="15dp"
                            android:textColor="@color/black"
                            android:layout_marginTop="10dp"

                            />


                        <EditText
                            android:id="@+id/pincode"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/editbackground"
                            android:layout_marginTop="5dp"
                            android:paddingLeft="10dp"
                            android:inputType="number"
                            android:hint="Enter Pincode"
                            android:maxLength="6"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Monthly Salary/Income"
                            android:textSize="15dp"
                            android:textColor="@color/black"
                            android:layout_marginTop="10dp"

                            />


                        <EditText
                            android:id="@+id/salary"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/editbackground"
                            android:layout_marginTop="5dp"
                            android:paddingLeft="10dp"
                            android:inputType="number"
                            android:hint="Enter Monthly Salary"

                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Relative Name"
                            android:textSize="15dp"
                            android:textColor="@color/black"
                            android:layout_marginTop="10dp"

                            />


                        <EditText
                            android:id="@+id/relativename"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/editbackground"
                            android:layout_marginTop="5dp"
                            android:paddingLeft="10dp"
                            android:inputType="text"
                            android:hint="Enter Relative Name"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Relative Mobile Number"
                            android:textSize="15dp"
                            android:textColor="@color/black"
                            android:layout_marginTop="10dp"

                            />


                        <EditText
                            android:id="@+id/relativenumber"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/editbackground"
                            android:layout_marginTop="5dp"
                            android:paddingLeft="10dp"
                            android:inputType="number"
                            android:hint="Enter Relative Number"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Relative Name"
                            android:textSize="15dp"
                            android:textColor="@color/black"
                            android:layout_marginTop="10dp"

                            />


                        <EditText
                            android:id="@+id/relativename1"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/editbackground"
                            android:layout_marginTop="5dp"
                            android:paddingLeft="10dp"
                            android:inputType="text"
