                            android:layout_height="50dp"
                            android:background="@drawable/editbackground"
                            android:layout_marginTop="5dp"
                            android:paddingLeft="10dp"
                            android:inputType="number"
                            android:hint="Enter Relative Number"
                            />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Current Address"
                            android:textSize="15dp"
                            android:textColor="@color/black"
                            android:layout_marginTop="10dp"

                            />


                        <EditText
                            android:id="@+id/address"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/editbackground"
                            android:layout_marginTop="5dp"
                            android:paddingLeft="10dp"
                            android:inputType="text"
                           android:hint="Enter Current Address"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Office Address"
                            android:textSize="15dp"
                            android:textColor="@color/black"
                            android:layout_marginTop="10dp"

                            />


                        <EditText
                            android:id="@+id/officeaddress"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/editbackground"
                            android:layout_marginTop="5dp"
                            android:paddingLeft="10dp"
                            android:inputType="text"
                            android:hint="Enter Office Address"
                            android:layout_marginBottom="10dp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="end"
                        android:layout_marginHorizontal="10dp"
                        >


                        <Button
                            android:onClick="Verifyadd"
                            android:id="@+id/btn_proceed"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:text="proceed"
                            android:textSize="16dp"
                            android:textAlignment="center"
                            android:backgroundTint="#9F0D7F"
                            android:textColor="@color/white"
                          android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                           />






                    </LinearLayout>

                </LinearLayout>









            </com.google.android.material.card.MaterialCardView>




        </LinearLayout>





    </androidx.core.widget.NestedScrollView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment_ky"/>

</LinearLayout>